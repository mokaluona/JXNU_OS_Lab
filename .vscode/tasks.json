{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++11", // 旧版本任务
            "type": "cppbuild",
            "command": "D:/tool_download_file/vscode/program/MinGW/bin/g++.exe", // 明确使用 g++
            "args": [
                "-std=c++11", // C++11 标准
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}_cpp11.exe" // 输出到独立文件
            ],
            "options": {
                "cwd": "${fileDirname}" // 工作目录设为当前文件所在目录
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false // 非默认任务，按需调用
            }
        },
        {
            "label": "Build C++14", // C++14 任务
            "type": "cppbuild",
            "command": "D:/tool_download_file/vscode/program/MinGW/bin/g++.exe",
            "args": [
                "-std=c++14", // C++14 标准
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}_cpp14.exe" // 区分输出文件名
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // 设为默认构建任务
            }
        }
    ]
}